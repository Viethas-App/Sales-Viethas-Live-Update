{
  "name": "Sales-Viethas",
  "description": "A Sales App from Viethas",
  "version": "1.0.0",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "publish": "build --windows --x64 -p always",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows-32": "npm run build && electron-builder build --windows --ia32",
    "electron:build-windows-64": "npm run build && electron-builder build --windows --x64",
    "electron:build-mac": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "@capacitor-community/electron": "^1.3.1",
    "@types/fs-extra": "^9.0.7",
    "electron-updater": "^4.3.9"
  },
  "devDependencies": {
    "electron": "10.3.1",
    "electron-builder": "22.9.1",
    "typescript": "~4.0.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": {
    "name": "Viethas",
    "url": "http://viethas.com/"
  },
  "license": "MIT",
  "build": {
    "appId": "com.viethas.sales",
    "productName": "Sales Viethas",
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "iffy",
        "repo": "electron-updater-example"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "./assets/appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/appIcon.ico"
    }
  }
}
